# 데이터베이스 생성 명령어
CREATE DATABASE (이름);

# 데이터베이스 사용 명령어
use (이름)

#테이블 생성 명령어
create table (이름) (
-> id varchar(255),
-> name varchar(255)
);

#생성한 테이블 보기
desc (테이블 이름);
